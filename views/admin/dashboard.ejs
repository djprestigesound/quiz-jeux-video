<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard Admin - Quiz Jeux VidÃ©o</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="admin-layout">
    <%- include('partials/nav') %>

    <div class="admin-content">
      <div class="page-header">
        <h1>ğŸ“Š Dashboard</h1>
      </div>

      <div class="event-banner">
        <div class="event-live">
          <span class="live-dot"></span>
          <span>Ã‰VÃ‰NEMENT EN DIRECT</span>
        </div>
        <div class="auto-refresh-indicator">
          <span class="refresh-dot"></span>
          <span>Actualisation automatique (10s)</span>
        </div>
      </div>

      <div class="stats-grid">
        <div class="stat-card stat-highlight">
          <div class="stat-icon">ğŸ®</div>
          <div class="stat-info">
            <div class="stat-value"><%= stats.active_sessions || 0 %></div>
            <div class="stat-label">Joueurs actifs EN CE MOMENT</div>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon">ğŸ‘¥</div>
          <div class="stat-info">
            <div class="stat-value"><%= stats.total_sessions || 0 %></div>
            <div class="stat-label">Sessions totales</div>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon">âœ…</div>
          <div class="stat-info">
            <div class="stat-value"><%= stats.completed_sessions || 0 %></div>
            <div class="stat-label">Sessions complÃ©tÃ©es</div>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon">â“</div>
          <div class="stat-info">
            <div class="stat-value"><%= questionCount %></div>
            <div class="stat-label">Questions disponibles</div>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon">ğŸ“ˆ</div>
          <div class="stat-info">
            <div class="stat-value"><%= stats.avg_score ? Math.round(stats.avg_score) : 0 %></div>
            <div class="stat-label">Score moyen</div>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon">ğŸ†</div>
          <div class="stat-info">
            <div class="stat-value"><%= stats.max_score || 0 %></div>
            <div class="stat-label">Meilleur score</div>
          </div>
        </div>
      </div>

      <div class="dashboard-sections">
        <div class="section">
          <h2>ğŸ“‚ CatÃ©gories</h2>
          <div class="categories-list">
            <% categories.forEach(cat => { %>
              <div class="category-chip">
                <%= cat.category %> (<%= cat.count %>)
              </div>
            <% }); %>
          </div>
        </div>

        <div class="section">
          <h2>ğŸ® Sessions rÃ©centes</h2>
          <div class="sessions-table">
            <table>
              <thead>
                <tr>
                  <th>Joueur</th>
                  <th>Score</th>
                  <th>Date</th>
                  <th>Statut</th>
                </tr>
              </thead>
              <tbody>
                <% recentSessions.forEach(session => { %>
                  <tr>
                    <td><%= session.player_name %></td>
                    <td><strong><%= session.score %></strong></td>
                    <td><%= new Date(session.started_at).toLocaleString('fr-FR') %></td>
                    <td>
                      <% if (session.completed_at) { %>
                        <span class="badge badge-success">TerminÃ©e</span>
                      <% } else { %>
                        <span class="badge badge-warning">En cours</span>
                      <% } %>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Auto-refresh du dashboard toutes les 10 secondes
    let refreshTimer;

    function startAutoRefresh() {
      refreshTimer = setInterval(() => {
        window.location.reload();
      }, 10000); // 10 secondes
    }

    // Animation du point de refresh
    setInterval(() => {
      const dot = document.querySelector('.refresh-dot');
      if (dot) {
        dot.style.animation = 'none';
        setTimeout(() => {
          dot.style.animation = 'pulse 1s ease-in-out';
        }, 10);
      }
    }, 10000);

    // Animation du point LIVE
    const liveDot = document.querySelector('.live-dot');
    if (liveDot) {
      setInterval(() => {
        liveDot.style.opacity = liveDot.style.opacity === '0.3' ? '1' : '0.3';
      }, 800);
    }

    // DÃ©marrer l'auto-refresh
    startAutoRefresh();

    // Nettoyer l'intervalle
    window.addEventListener('beforeunload', () => {
      if (refreshTimer) {
        clearInterval(refreshTimer);
      }
    });
  </script>
</body>
</html>

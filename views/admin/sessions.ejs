<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sessions - Admin Quiz</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="admin-layout">
    <%- include('partials/nav') %>

    <div class="admin-content">
      <div class="page-header">
        <h1>üéÆ Sessions de jeu</h1>
      </div>

      <div class="sessions-table-full">
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Joueur</th>
              <th>Score</th>
              <th>Bonnes r√©ponses</th>
              <th>Total questions</th>
              <th>D√©but</th>
              <th>Fin</th>
              <th>Statut</th>
            </tr>
          </thead>
          <tbody>
            <% sessions.forEach(session => { %>
              <tr>
                <td><code><%= session.id.substring(0, 8) %>...</code></td>
                <td><%= session.player_name %></td>
                <td><strong><%= session.score %></strong></td>
                <td><%= session.correct_answers %> / <%= session.total_questions %></td>
                <td><%= session.total_questions %></td>
                <td><%= new Date(session.started_at).toLocaleString('fr-FR') %></td>
                <td>
                  <% if (session.completed_at) { %>
                    <%= new Date(session.completed_at).toLocaleString('fr-FR') %>
                  <% } else { %>
                    -
                  <% } %>
                </td>
                <td>
                  <% if (session.completed_at) { %>
                    <span class="badge badge-success">‚úì Termin√©e</span>
                  <% } else { %>
                    <span class="badge badge-warning">‚è≥ En cours</span>
                  <% } %>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>

      <% if (sessions.length === 0) { %>
        <div class="empty-state">
          <p>Aucune session pour le moment.</p>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>

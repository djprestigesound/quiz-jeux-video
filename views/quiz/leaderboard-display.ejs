  <style>
    @keyframes pulse-border {
      0%, 100% {
        border-color: rgba(255, 0, 110, 0.5);
        box-shadow: 0 0 10px rgba(255, 0, 110, 0.3);
      }
      50% {
        border-color: rgba(255, 0, 110, 1);
        box-shadow: 0 0 25px rgba(255, 0, 110, 0.6);
      }
    }

    @keyframes pulse {
      0%, 100% {
        opacity: 0.6;
        transform: scale(1);
      }
      50% {
        opacity: 1;
        transform: scale(1.2);
      }
    }
  </style>

  <script>
    // Auto-refresh plus rapide pour l'Ã©cran gÃ©ant (3 secondes)
    let refreshTimer;

    function startAutoRefresh() {
      refreshTimer = setInterval(() => {
        window.location.reload();
      }, 3000); // 3 secondes pour le mode display
    }

    // Animation du point de refresh
    setInterval(() => {
      const dot = document.querySelector('.refresh-dot');
      if (dot) {
        dot.style.animation = 'none';
        setTimeout(() => {
          dot.style.animation = 'pulse 1s ease-in-out';
        }, 10);
      }
    }, 3000);

    // DÃ©marrer l'auto-refresh
    startAutoRefresh();

    // Nettoyer l'intervalle
    window.addEventListener('beforeunload', () => {
      if (refreshTimer) {
        clearInterval(refreshTimer);
      }
    });

    // EmpÃªcher le scroll accidentel
    document.body.style.overflow = 'hidden';

    // DÃ©sactiver le zoom sur double-tap (pour Ã©cran tactile)
    document.addEventListener('dblclick', (e) => {
      e.preventDefault();
    });
  </script>

<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Classement - Quiz Jeux Vid√©o</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <div class="leaderboard-screen">
      <div class="brand-logo-header">
        <div class="dual-branding">
          <img src="/images/branding/logo.png" alt="VERDON" class="company-logo">
          <span class="collab-separator">&</span>
          <img src="/images/branding/dj_logo.jpg" alt="DJ Prestige Sound" class="partner-logo">
        </div>
        <p class="event-tagline">Un √©v√©nement VERDON & DJ Prestige Sound</p>
      </div>

      <div class="page-header">
        <h1>üèÜ Classement</h1>
        <p>Les meilleurs joueurs</p>
      </div>

      <div class="leaderboard-full">
        <% if (leaderboard.length === 0) { %>
          <div class="empty-state">
            <p>Aucun joueur pour le moment.</p>
            <p>Soyez le premier √† jouer !</p>
          </div>
        <% } else { %>
          <% leaderboard.forEach((entry, index) => { %>
            <div class="leaderboard-item-large">
              <div class="rank-badge rank-<%= index + 1 %>">
                <% if (index === 0) { %>
                  ü•á
                <% } else if (index === 1) { %>
                  ü•à
                <% } else if (index === 2) { %>
                  ü•â
                <% } else { %>
                  #<%= index + 1 %>
                <% } %>
              </div>

              <div class="player-info">
                <div class="player-name"><%= entry.player_name %></div>
                <div class="player-stats">
                  <%= entry.correct_answers %> / <%= entry.total_questions %> bonnes r√©ponses
                </div>
              </div>

              <div class="player-score-large">
                <%= entry.score %>
              </div>
            </div>
          <% }); %>
        <% } %>
      </div>

      <div class="page-actions">
        <a href="/play" class="btn btn-primary">Jouer</a>
        <a href="/" class="btn btn-secondary">‚Üê Accueil</a>
        <a href="/quiz/leaderboard/display" class="btn btn-secondary">üì∫ Mode √âcran G√©ant</a>
      </div>

      <div class="auto-refresh-indicator">
        <span class="refresh-dot"></span>
        <span>Mise √† jour automatique</span>
      </div>
    </div>
  </div>

  <script>
    // Auto-refresh toutes les 5 secondes
    let refreshTimer;
    let lastUpdateTime = Date.now();

    function startAutoRefresh() {
      refreshTimer = setInterval(() => {
        // Reload la page pour mettre √† jour le classement
        window.location.reload();
      }, 5000); // 5 secondes
    }

    // Animation du point de refresh
    setInterval(() => {
      const dot = document.querySelector('.refresh-dot');
      if (dot) {
        dot.style.animation = 'none';
        setTimeout(() => {
          dot.style.animation = 'pulse 1s ease-in-out';
        }, 10);
      }
    }, 5000);

    // D√©marrer l'auto-refresh
    startAutoRefresh();

    // Nettoyer l'intervalle quand on quitte la page
    window.addEventListener('beforeunload', () => {
      if (refreshTimer) {
        clearInterval(refreshTimer);
      }
    });
  </script>
</body>
</html>

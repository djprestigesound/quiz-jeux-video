  <script>
    // Gestion des tabs
    const tabs = document.querySelectorAll('.quiz-tab');
    const contents = document.querySelectorAll('.quiz-content');

    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const quizId = tab.dataset.quiz;

        // Retirer la classe active de tous les tabs et contenus
        tabs.forEach(t => t.classList.remove('active'));
        contents.forEach(c => c.classList.remove('active'));

        // Ajouter la classe active au tab et contenu s√©lectionn√©
        tab.classList.add('active');
        document.querySelector(`.quiz-content[data-quiz="${quizId}"]`).classList.add('active');
      });
    });

    // Auto-refresh toutes les 5 secondes
    let refreshTimer;
    let lastUpdateTime = Date.now();

    function startAutoRefresh() {
      refreshTimer = setInterval(() => {
        // Sauvegarder le quiz actif
        const activeTab = document.querySelector('.quiz-tab.active');
        const activeQuizId = activeTab ? activeTab.dataset.quiz : '1';
        sessionStorage.setItem('activeQuiz', activeQuizId);

        // Reload la page pour mettre √† jour le classement
        window.location.reload();
      }, 5000); // 5 secondes
    }

    // Restaurer le quiz actif apr√®s le reload
    window.addEventListener('load', () => {
      const savedQuizId = sessionStorage.getItem('activeQuiz');
      if (savedQuizId) {
        tabs.forEach(t => t.classList.remove('active'));
        contents.forEach(c => c.classList.remove('active'));

        const targetTab = document.querySelector(`.quiz-tab[data-quiz="${savedQuizId}"]`);
        const targetContent = document.querySelector(`.quiz-content[data-quiz="${savedQuizId}"]`);

        if (targetTab && targetContent) {
          targetTab.classList.add('active');
          targetContent.classList.add('active');
        }
      }
    });

    // Animation du point de refresh
    setInterval(() => {
      const dot = document.querySelector('.refresh-dot');
      if (dot) {
        dot.style.animation = 'none';
        setTimeout(() => {
          dot.style.animation = 'pulse 1s ease-in-out';
        }, 10);
      }
    }, 5000);

    // D√©marrer l'auto-refresh
    startAutoRefresh();

    // Nettoyer l'intervalle quand on quitte la page
    window.addEventListener('beforeunload', () => {
      if (refreshTimer) {
        clearInterval(refreshTimer);
      }
    });
  </script>
